<cover-view class="tab-bar">
  <cover-view 
    wx:for="{{list}}" 
    wx:key="index" 
    class="tab-bar-item {{selected === index ? 'active' : ''}}"
    wx:if="{{!item.adminOnly || isAdmin}}"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <cover-image 
      class="tab-icon" 
      src="{{selected === index ? item.selectedIconPath : item.iconPath}}"
    />
    <cover-view class="tab-text">{{item.text}}</cover-view>
  </cover-view>
</cover-view>
