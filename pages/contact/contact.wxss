.contact-container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #ffffff, rgba(207, 207, 207, 0.3));
  display: flex;
  flex-direction: column;
  padding-bottom: 180rpx; /* Space for TabBar and safe area */
  align-items: center;
}

/* 品牌信息区域 */
.brand-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0rpx 0rpx 0rpx;
  position: relative;
}

.brand-logo {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(40, 110, 2, 0.3);
  overflow: hidden;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
}

.logo-image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 96rpx;
}

.brand-info {
  text-align: center;
  max-width: 100%;
  position: relative;
  z-index: 1;
  margin-top: 36rpx;
}

.brand-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 24rpx;
  letter-spacing: 2rpx;
}

.brand-slogan {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 24rpx;
  font-weight: 400;
  line-height: 1.6;
  letter-spacing: 1rpx;
  position: relative;
}

.brand-slogan::before,
.brand-slogan::after {
  content: '"';
  color: #CCCCCC;
  font-size: 32rpx;
}

.brand-location {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333333;
  padding: 12rpx 24rpx;
  margin-top: 16rpx;
}

.location-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  font-size: 28rpx;
}

.location-text {
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 品牌介绍 */
.introduction-section {
  margin: 40rpx 32rpx;
  position: relative;
  display: flex;
  justify-content: center;
}

.introduction-content {
  background-color: #FFFFFF;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
  width: 100%;
  border-radius: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.introduction-content::before {
  content: '';
  position: absolute;
  height: 4rpx;
  opacity: 0.1;
}

.introduction-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  font-weight: 300;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 1;
}

.introduction-text:first-letter {
  font-weight: 500;
  font-size: 30rpx;
  color: #000000;
}

/* 拍摄风格 */
.styles-section {
}

.styles-content {
  padding: 60rpx 40rpx;
  text-align: center;
}

.styles-label {
  font-size: 28rpx;
  color: #000000;
  font-weight: 400;
  margin-top: 24rpx;
  letter-spacing: 1rpx;
  display: block;
  text-align: center;
}

.styles-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-top: 20rpx;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.style-tag {
  padding: 16rpx 32rpx;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 1);
  border-radius: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 300;
}

/* 联系方式入口 */
.contact-entries {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
  margin: 40rpx 32rpx;
}

.contact-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  border: 2rpx solid rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(247, 247, 247, 0.1);
  box-shadow: 
  10px 10px 15px rgba(213, 213, 213, 0.7),
  -10px -10px 15px rgba(255, 255, 255, 0.7);
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
}

/* 工作时间 */
.working-hours {
  margin: 40rpx 32rpx 60rpx;
}

.hours-info {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.hours-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  position: relative;
}

.hours-icon::after {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.04);
  z-index: -1;
}

.hours-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.6;
  letter-spacing: 0.5rpx;
}

/* 状态样式 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #666666;
  font-size: 28rpx;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #666666;
  font-size: 28rpx;
}

.error-container button {
  margin-top: 24rpx;
  padding: 16rpx 32rpx;
  background-color: #000000;
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 1rpx;
}