.contact-container {
  min-height: 100vh;
  background-color: #FFFFFF;
  color: #000000;
  padding: 24rpx;
  padding-bottom: 160rpx; /* 为底部TabBar和安全区域留出空间 */
}

/* 品牌信息区域 */
.brand-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  margin-bottom: 32rpx;
}

.brand-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.logo-image {
  width: 100%;
  height: 100%;
  display: block;
}

.brand-info {
  text-align: center;
  max-width: 100%;
}

.brand-name {
  font-size: 42rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.brand-slogan {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 300;
  line-height: 1.6;
}

.brand-location {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #333333;
}

.location-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.location-text {
  font-weight: 400;
}

/* 品牌介绍 */
.introduction-section {
  margin-bottom: 40rpx;
}

.introduction-content {
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

.introduction-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 联系方式入口 */
.contact-entries {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  margin-bottom: 32rpx;
}

.entry-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  padding: 32rpx 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.entry-item:active {
  background-color: rgba(0, 0, 0, 0.02);
  transform: translateY(-1rpx);
}

.entry-icon {
  font-size: 44rpx;
  margin-right: 24rpx;
  width: 44rpx;
  text-align: center;
}

.entry-content {
  flex: 1;
}

.entry-label {
  font-size: 32rpx;
  color: #000000;
  font-weight: 500;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.entry-value {
  font-size: 26rpx;
  color: #666666;
  font-weight: 300;
}

.entry-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
  font-weight: 300;
}

