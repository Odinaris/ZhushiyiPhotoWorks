.contact-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
  padding: 0 10rpx;
}

/* 问答列表 */
.qa-section {
  margin-bottom: 40rpx;
}

.qa-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.qa-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.question {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.q-icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.q-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 48rpx;
}

.answer {
  display: flex;
  align-items: flex-start;
  padding-left: 64rpx;
}

.a-icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.a-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 联系方式列表 */
.contacts-section {
  margin-bottom: 40rpx;
}

.contacts-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.contact-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.contact-content {
  flex: 1;
}

.contact-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.contact-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.contact-action {
  padding: 12rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 信息卡片 */
.info-section {
  margin-bottom: 20rpx;
}

.info-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}
