/* 拍摄风格 */
.styles-section {
  margin-bottom: 40rpx;
}

.styles-content {
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

.styles-label {
  font-size: 30rpx;
  color: #000000;
  font-weight: 500;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
  display: block;
}

.styles-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.style-tag {
  background-color: #000000;
  color: #FFFFFF;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

.working-hours {
  margin-bottom: 24rpx;
}

.hours-info {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.03);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

.hours-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.hours-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
  line-height: 1.6;
}

/* 状态样式 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #666666;
  font-size: 28rpx;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #666666;
  font-size: 28rpx;
}

.error-container button {
  margin-top: 24rpx;
  padding: 16rpx 32rpx;
  background-color: #000000;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 1rpx;
}