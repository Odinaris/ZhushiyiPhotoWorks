.contact-container {
  min-height: 100vh;
  background-color: #000000;
  color: #FFFFFF;
  padding: 24rpx;
  padding-bottom: 160rpx; /* 为底部TabBar和安全区域留出空间 */
}

.section-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin: 32rpx 0 24rpx;
  padding: 0 10rpx;
  letter-spacing: 2rpx;
}

/* 问答列表 */
.qa-section {
  margin-bottom: 48rpx;
}

.qa-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.qa-item {
  background-color: #000000;
  border-radius: 16rpx;
  padding: 36rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.question {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.q-icon {
  display: inline-block;
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background-color: #1A1A1A;
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.q-text {
  flex: 1;
  font-size: 30rpx;
  color: #FFFFFF;
  font-weight: 500;
  line-height: 52rpx;
  letter-spacing: 0.5rpx;
}

.answer {
  display: flex;
  align-items: flex-start;
  padding-left: 72rpx;
}

.a-icon {
  display: inline-block;
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background-color: rgba(255,255,255,0.15);
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.a-text {
  flex: 1;
  font-size: 28rpx;
  color: #DDDDDD;
  line-height: 1.7;
  font-weight: 300;
}

/* 联系方式列表 */
.contacts-section {
  margin-bottom: 48rpx;
}

.contacts-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  background-color: #000000;
  border-radius: 16rpx;
  padding: 36rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  transition: all 0.3s ease;
}

.contact-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx rgba(255, 255, 255, 0.08);
}

.contact-icon {
  font-size: 52rpx;
  margin-right: 28rpx;
}

.contact-content {
  flex: 1;
}

.contact-label {
  font-size: 24rpx;
  color: #DDDDDD;
  margin-bottom: 10rpx;
  font-weight: 300;
}

.contact-value {
  font-size: 30rpx;
  color: #FFFFFF;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.contact-action {
  padding: 14rpx 32rpx;
  background-color: #1A1A1A;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 信息卡片 */
.info-section {
  margin-bottom: 24rpx;
}

.info-card {
  display: flex;
  align-items: center;
  background-color: #000000;
  border-radius: 16rpx;
  padding: 36rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.info-icon {
  font-size: 52rpx;
  margin-right: 28rpx;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: #DDDDDD;
  margin-bottom: 10rpx;
  font-weight: 300;
}

.info-value {
  font-size: 30rpx;
  color: #FFFFFF;
  line-height: 1.7;
  font-weight: 400;
}
