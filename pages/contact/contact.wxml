<view class="contact-container">
  <!-- 品牌信息区域 -->
  <view class="brand-section">
    <!-- 品牌Logo -->
    <view class="brand-logo" wx:if="{{photographerInfo.logo}}">
      <image class="logo-image" src="{{photographerInfo.logo}}" mode="aspectFit"></image>
    </view>
    
    <!-- 品牌信息 -->
    <view class="brand-info">
      <view class="brand-name">{{photographerInfo.brandName || '摄影工作室'}}</view>
      <view class="brand-slogan">{{photographerInfo.slogan || '记录每一个美好瞬间'}}</view>
      <view class="brand-location" wx:if="{{photographerInfo.location}}">
        <text class="location-icon">📍</text>
        <text class="location-text">{{photographerInfo.location}}</text>
      </view>
    </view>
  </view>

  <!-- 品牌介绍 -->
  <view class="introduction-section" wx:if="{{photographerInfo.introduction}}">
    <view class="introduction-content">
      <text class="introduction-text">{{photographerInfo.introduction}}</text>
    </view>
  </view>

  <!-- 拍摄风格 -->
  <view class="styles-section" wx:if="{{photographerInfo.styles && photographerInfo.styles.length > 0}}">
    <view class="styles-content">
      <text class="styles-label">拍摄风格</text>
      <view class="styles-tags">
        <text class="style-tag" wx:for="{{photographerInfo.styles}}" wx:key="index">{{item}}</text>
      </view>
    </view>
  </view>

  <!-- 联系方式入口 -->
  <view class="contact-entries">
    <view class="entry-item phone-entry" wx:if="{{photographerInfo.phone}}" bindtap="makePhoneCall" data-phone="{{photographerInfo.phone}}">
      <view class="entry-icon">📞</view>
      <view class="entry-content">
        <view class="entry-label">电话联系</view>
        <view class="entry-value">{{photographerInfo.phone}}</view>
      </view>
      <view class="entry-arrow">›</view>
    </view>

    <view class="entry-item wechat-entry" wx:if="{{photographerInfo.wechat}}" bindtap="copyWechat" data-wechat="{{photographerInfo.wechat}}">
      <view class="entry-icon">💬</view>
      <view class="entry-content">
        <view class="entry-label">微信联系</view>
        <view class="entry-value">{{photographerInfo.wechat}}</view>
      </view>
      <view class="entry-arrow">›</view>
    </view>

    <view class="entry-item share-entry" bindtap="showShareMenu">
      <view class="entry-icon">📤</view>
      <view class="entry-content">
        <view class="entry-label">分享推荐</view>
        <view class="entry-value">分享给好友</view>
      </view>
      <view class="entry-arrow">›</view>
    </view>

    <view class="entry-item email-entry" wx:if="{{photographerInfo.email}}" bindtap="copyEmail" data-email="{{photographerInfo.email}}">
      <view class="entry-icon">✉️</view>
      <view class="entry-content">
        <view class="entry-label">邮箱联系</view>
        <view class="entry-value">{{photographerInfo.email}}</view>
      </view>
      <view class="entry-arrow">›</view>
    </view>
  </view>

  <!-- 工作时间 -->
  <view class="working-hours" wx:if="{{photographerInfo.workingHours}}">
    <view class="hours-info">
      <text class="hours-icon">🕐</text>
      <text class="hours-text">{{photographerInfo.workingHours}}</text>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
  <view class="error-container" wx:if="{{!loading && loadError}}">
    <text>加载失败</text>
    <button bindtap="onRetry">重试</button>
  </view>

  <!-- 空状态 -->
  <view class="empty-container" wx:if="{{!loading && !hasData}}">
    <view class="empty-icon">📷</view>
    <view class="empty-text">暂无摄影师信息</view>
  </view>
</view>
