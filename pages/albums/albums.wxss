/* Albums Page - Premium Minimalist Design */
.albums-container {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 120rpx);
  background: var(--primary-white);
  position: relative;
}

/* Category Tabs */
.category-tabs {
  display: flex;
  align-items: center;
  background: var(--primary-white);
  border-bottom: 1rpx solid var(--gray-100);
  padding: 0 32rpx;
  flex-shrink: 0;
  height: 120rpx;
  box-sizing: border-box;
  width: 100%;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.tabs-scroll {
  flex: 1;
  white-space: nowrap;
  min-width: 0;
  overflow-x: hidden;
  overflow-y: hidden;
}

.tabs-container {
  display: flex;
  padding: 24rpx 0;
  height: 100%;
  align-items: center;
  gap: 8rpx;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.tabs-container::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

/* 隐藏所有滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  background: transparent;
}

/* 微信小程序隐藏滚动条 */
scroll-view ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.tab-item {
  padding: 0 32rpx;
  position: relative;
  flex-shrink: 0;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: fit-content;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item.active {
  background: var(--gray-100);
}

