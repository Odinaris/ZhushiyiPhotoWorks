.tab-text {
  font-size: 24rpx;
  color: var(--gray-600);
  line-height: 1.4;
  white-space: nowrap;
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

.tab-item.active .tab-text {
  color: var(--primary-black);
  font-weight: 500;
}

/* View Toggle Button */
.view-toggle {
  display: flex;
  background: var(--gray-50);
  border-radius: 16rpx;
  padding: 0;
  margin-left: 24rpx;
  border: 1rpx solid var(--gray-200);
  flex-shrink: 0;
  width: 56rpx;
  height: 56rpx;
  align-items: center;
  justify-content: center;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.view-toggle:active {
  background: var(--gray-100);
  transform: scale(0.95);
}

.view-mode-btn {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background: transparent;
  color: var(--gray-600);
  border-radius: 12rpx;
  border: none;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: 28rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-mode-btn::after {
  border: none;
}

.view-mode-btn:active {
  color: var(--primary-black);
}

.view-icon {
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Content Swiper */
.content-swiper {
  flex: 1;
  height: 100%;
}

/* Albums Content */
.albums-content {
  height: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.albums-content::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0 24rpx;
  margin-bottom: 32rpx;
  border-bottom: 1rpx solid var(--gray-100);
}

.content-title {
  font-size: 32rpx;
  font-weight: 300;
  color: var(--gray-900);
  letter-spacing: 1rpx;
}

.content-count {
  font-size: 22rpx;
  color: var(--gray-500);
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* Albums List */
.albums-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* Single Column Mode */
view.albums-list.single,
.albums-list.single {
  display: flex;
  flex-direction: column !important;
  gap: 32rpx !important;
}

/* Double Column Mode */
view.albums-list.double,
.albums-list.double {
  display: grid !important;
  grid-template-columns: repeat(2, 1fr) !important;
  gap: 24rpx !important;
}

.album-card {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-100);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Single Column Mode - Portrait Cards */
.albums-list.single .album-card {
  height: 520rpx;
}

/* Double Column Mode - Square Cards */
.albums-list.double .album-card {
  height: 480rpx;
}

.album-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.album-image-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.album-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.album-card:active .album-cover {
  transform: scale(1.05);
}

.album-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.6) 40%, transparent 100%);
  padding: 48rpx 28rpx 28rpx;
  transform: translateY(100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.album-card:active .album-overlay {
  transform: translateY(0);
}

.album-overlay-content {
  color: var(--primary-white);
}

.album-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 0.5rpx;
}

.album-desc {
  font-size: 20rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 300;
  letter-spacing: 0.25rpx;
}

.album-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 18rpx;
}

/* Double Column Mode - Text Adjustments */
.albums-list.double .album-title {
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.albums-list.double .album-desc {
  font-size: 18rpx;
  margin-bottom: 12rpx;
}

.albums-list.double .album-footer {
  font-size: 16rpx;
}

.album-category {
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  font-weight: 400;
  letter-spacing: 0.25rpx;
}

/* Double Column Mode - Category Tag Adjustments */
.albums-list.double .album-category {
  padding: 4rpx 12rpx;
  font-size: 16rpx;
}

.album-count {
  opacity: 0.8;
  font-weight: 300;
  letter-spacing: 0.25rpx;
}

/* Load More */
.load-more {
  text-align: center;
  padding: 48rpx 0;
  font-size: 22rpx;
  color: var(--gray-500);
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* Error State */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  gap: 32rpx;
}

.error-text {
  font-size: 22rpx;
  color: var(--gray-600);
  font-weight: 400;
  letter-spacing: 0.5rpx;
}


