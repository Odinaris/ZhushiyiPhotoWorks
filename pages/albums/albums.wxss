.albums-container {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 100rpx);
  background-color: #FFFFFF;
  position: relative;
}

/* 顶部分类Tab栏 */
.category-tabs {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  padding: 0 24rpx;
  flex-shrink: 0;
  height: 88rpx;
  box-sizing: border-box;
  overflow-x: hidden; /* 防止整个tab栏横向滚动 */
  width: 100%;
}

.tabs-scroll {
  flex: 1;
  white-space: nowrap;
  min-width: 0;
  overflow-x: hidden; /* 明确设置横向隐藏 */
  overflow-y: hidden; /* 垂直也隐藏 */
}

.tabs-container {
  display: flex;
  padding: 20rpx 0;
  height: 100%;
  align-items: center;
  overflow-x: hidden; /* 容器也防止横向滚动 */
  max-width: 100%;
}

.tab-item {
  padding: 0 24rpx;
  position: relative;
  flex-shrink: 1;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: fit-content;
  max-width: 120rpx;
  overflow: hidden;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #000000;
  border-radius: 3rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.tab-item.active .tab-text {
  color: #000000;
  font-weight: 500;
}

/* 视图切换按钮 */
.view-toggle {
  display: flex;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  padding: 0;
  margin-left: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  align-items: center;
  justify-content: center;
}

.view-mode-btn {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background: transparent;
  color: #666666;
  border-radius: 12rpx;
  border: none;
  transition: all 0.3s ease;
  font-size: 24rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-mode-btn::after {
  border: none;
}

.view-mode-btn:active {
  color: #000000;
  background: rgba(0, 0, 0, 0.1);
}

.view-icon {
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

/* 内容Swiper */
.content-swiper {
  flex: 1;
  height: 100%;
}

/* 内容区域 */
.albums-content {
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  padding-bottom: 20rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  letter-spacing: 1rpx;
}

.content-count {
  font-size: 24rpx;
  color: #666666;
  font-weight: 300;
}

/* 作品集列表 */
.albums-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 单栏模式 - 高优先级 */
view.albums-list.single,
.albums-list.single {
  display: flex;
  flex-direction: column !important;
  gap: 24rpx !important;
}

/* 双栏模式 - 高优先级 */
view.albums-list.double,
.albums-list.double {
  display: grid !important;
  grid-template-columns: repeat(2, 1fr) !important;
  gap: 16rpx !important;
}



.album-card {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

/* 单栏模式 */
.albums-list.single .album-card {
  height: 420rpx;
}

/* 双栏模式 */
.albums-list.double .album-card {
  height: 280rpx;
}

.album-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
}

.album-cover {
  width: 100%;
  height: 100%;
  display: block;
  filter: contrast(1.05) brightness(0.95);
}

.album-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
  padding: 48rpx 28rpx 28rpx;
  color: #FFFFFF;
}

.album-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 1rpx;
}

.album-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 300;
}

.album-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
}

/* 双栏模式下的文字调整 */
.albums-list.double .album-title {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.albums-list.double .album-desc {
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.albums-list.double .album-footer {
  font-size: 20rpx;
}

.album-category {
  background-color: rgba(255, 255, 255, 0.25);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  font-weight: 400;
}

/* 双栏模式下的分类标签调整 */
.albums-list.double .album-category {
  padding: 6rpx 16rpx;
  font-size: 18rpx;
}

.album-count {
  opacity: 0.85;
  font-weight: 300;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #666666;
  font-weight: 300;
}

/* 错误状态 */
.error-container {
  position: absolute;
  right: 24rpx;
  top: 140rpx; /* 考虑到顶部Tab栏的高度 */
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.85);
  color: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 24rpx rgba(255, 255, 255, 0.08);
  padding: 16rpx 20rpx;
}

/* 内容区域内的加载动画 */
.albums-content .loading-container {
  position: relative;
  top: auto;
  right: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: transparent;
  box-shadow: none;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-top: 4rpx solid #000000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666666;
  font-weight: 300;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
