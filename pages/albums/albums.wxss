.albums-container {
  display: flex;
  height: calc(100vh - 100rpx);
  background-color: #FAFAFA;
}

/* 左侧分类 */
.category-sidebar {
  width: 200rpx;
  background-color: #FFFFFF;
  border-right: 1rpx solid rgba(0, 0, 0, 0.06);
}

.category-item {
  padding: 32rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
  position: relative;
  transition: all 0.3s ease;
}

.category-item.active {
  background-color: #1A1A1A;
}

.category-item.active .category-name {
  color: #FFFFFF;
  font-weight: 600;
}

.category-item.active .category-count {
  color: rgba(255, 255, 255, 0.7);
}

.category-name {
  display: block;
  font-size: 28rpx;
  color: #1A1A1A;
  margin-bottom: 8rpx;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  transition: all 0.3s ease;
}

.category-count {
  display: block;
  font-size: 22rpx;
  color: #999;
  font-weight: 300;
  transition: all 0.3s ease;
}

/* 右侧内容区 */
.albums-content {
  flex: 1;
  padding: 24rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  padding-bottom: 20rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: 1rpx;
}

.content-count {
  font-size: 24rpx;
  color: #999;
  font-weight: 300;
}

/* 作品集列表 */
.albums-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.album-card {
  position: relative;
  height: 420rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.album-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.album-cover {
  width: 100%;
  height: 100%;
  filter: contrast(1.05) brightness(0.95);
}

.album-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
  padding: 48rpx 28rpx 28rpx;
  color: #FFFFFF;
}

.album-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 1rpx;
}

.album-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 300;
}

.album-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
}

.album-category {
  background-color: rgba(255, 255, 255, 0.25);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  font-weight: 400;
}

.album-count {
  opacity: 0.85;
  font-weight: 300;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
  font-weight: 300;
}
