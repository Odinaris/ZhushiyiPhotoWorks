.albums-container {
  display: flex;
  height: calc(100vh - 100rpx);
  background-color: #f5f5f5;
}

/* 左侧分类 */
.category-sidebar {
  width: 200rpx;
  background-color: #fff;
  border-right: 1rpx solid #eee;
}

.category-item {
  padding: 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transition: all 0.3s;
}

.category-item.active {
  background: linear-gradient(to right, #667eea15 0%, #764ba215 100%);
  border-left: 4rpx solid #667eea;
}

.category-item.active .category-name {
  color: #667eea;
  font-weight: bold;
}

.category-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.category-count {
  display: block;
  font-size: 22rpx;
  color: #999;
}

/* 右侧内容区 */
.albums-content {
  flex: 1;
  padding: 20rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  margin-bottom: 20rpx;
}

.content-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.content-count {
  font-size: 24rpx;
  color: #999;
}

/* 作品集列表 */
.albums-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.album-card {
  position: relative;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.album-cover {
  width: 100%;
  height: 100%;
}

.album-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, transparent 100%);
  padding: 40rpx 24rpx 24rpx;
  color: #fff;
}

.album-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.album-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.album-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
}

.album-category {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.album-count {
  opacity: 0.8;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}
