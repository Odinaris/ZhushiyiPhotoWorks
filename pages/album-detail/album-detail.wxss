.detail-container {
  min-height: 100vh;
  background-color: #000000;
  color: #FFFFFF;
  padding-bottom: 140rpx;
}

/* 头部信息 */
.detail-header {
  background-color: #000000;
  padding: 48rpx 36rpx;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.06);
}

.album-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  line-height: 1.5;
  letter-spacing: 1rpx;
}

.album-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #DDDDDD;
  margin-bottom: 24rpx;
  font-weight: 300;
}

.info-item {
  color: #EEEEEE;
}

.info-divider {
  margin: 0 16rpx;
  color: #DDD;
}

.album-description {
  font-size: 28rpx;
  color: #DDDDDD;
  line-height: 1.8;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 图片网格 */
.images-grid {
  padding: 0 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.image-item {
  background-color: #000000;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  transition: all 0.3s ease;
}

.image-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 28rpx rgba(255, 255, 255, 0.12);
}

.item-image {
  width: 100%;
  height: 360rpx;
  display: block;
  filter: contrast(1.05);
}

.image-desc {
  padding: 20rpx;
  font-size: 24rpx;
  color: #DDDDDD;
  line-height: 1.6;
  font-weight: 300;
  min-height: 60rpx;
}

/* 分享区域 */
.share-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000000;
  padding: 24rpx 36rpx;
  box-shadow: 0 -6rpx 24rpx rgba(255, 255, 255, 0.06);
  z-index: 100;
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
}

.share-btn {
  width: 100%;
  background-color: #1A1A1A;
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  font-size: 30rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

.share-btn:active {
  background-color: #333;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 36rpx;
}
