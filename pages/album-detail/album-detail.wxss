.detail-container {
  min-height: 100vh;
  background-color: #FFFFFF;
  color: #000000;
  padding-bottom: 140rpx;
}

/* 头部信息 */
.detail-header {
  background-color: #FFFFFF;
  padding: 48rpx 36rpx;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header-left {
  flex: 1;
  min-width: 0;
}

.album-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 24rpx;
  line-height: 1.5;
  letter-spacing: 1rpx;
}

.album-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 24rpx;
  font-weight: 300;
}

.info-item {
  color: #333333;
}

.info-divider {
  margin: 0 16rpx;
  color: #999999;
}

.album-description {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 视图切换按钮 */
.view-toggle {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.view-mode-btn {
  width: 40rpx;
  height: 40rpx;
  min-width: 40rpx;
  max-width: 40rpx;
  background: rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  transition: all 0.3s ease;
  box-sizing: border-box;
  flex-shrink: 0;
}

.view-mode-btn::after {
  border: none;
}

.view-mode-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

.view-icon {
  font-size: 20rpx;
  color: #666666;
  font-weight: 600;
  line-height: 1;
  width: 20rpx;
  height: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 图片展示区域 */
.images-container {
  padding: 0 2rpx;
}

/* 图片网格 - 瀑布流模式 */
.images-grid.grid {
  display: flex;
  gap: 2rpx;
  width: 100%;
}

/* 瀑布流列 */
.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

/* 图片网格 - 单栏模式 */
.images-grid.list {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  width: 100%;
}

/* 图片项 - 移除圆角 */
.image-item {
  width: 100%;
  background-color: #FFFFFF;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.image-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.12);
}

/* 图片样式 - 保持宽高比 */
.item-image {
  width: 100%;
  display: block;
  filter: contrast(1.05);
  transition: all 0.3s ease;
  aspect-ratio: auto; /* 让图片保持原始宽高比 */
  object-fit: contain; /* 确保图片完整显示 */
}

/* 图片描述 - 统一样式 */
.image-desc {
  padding: 16rpx;
  font-size: 24rpx;
  color: #333333;
  line-height: 1.6;
  font-weight: 300;
  background-color: rgba(0, 0, 0, 0.02);
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

/* 单栏模式下的描述稍大 */
.images-grid.list .image-desc {
  padding: 20rpx;
  font-size: 26rpx;
  line-height: 1.8;
}

/* 分享区域 */
.share-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 24rpx 36rpx;
  box-shadow: 0 -6rpx 24rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.share-btn {
  width: 100%;
  background-color: #000000;
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  font-size: 30rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

.share-btn:active {
  background-color: #333333;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 36rpx;
}
