.index-container {
  min-height: 100vh;
  background-color: #000000;
  padding-bottom: 40rpx;
}

/* 轮播图区域 */
.banner-section {
  padding: 30rpx 0;
  background: linear-gradient(to left, #cacaca 0%, #000000 100%);
}

.banner-swiper {
  height: 500rpx;
  width: 100%;
}

.banner-item {
  padding: 0 10rpx;
  box-sizing: border-box;
}

.banner-card {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transition: transform 0.3s ease;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 品牌信息 */
.brand-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  margin: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

.brand-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.brand-slogan {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.brand-styles {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-tag {
  display: inline-block;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 管理入口 */
.admin-entry {
  position: fixed;
  top: 100rpx;
  right: 30rpx;
  z-index: 1000;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 16rpx 28rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.admin-icon {
  font-size: 32rpx;
}

.admin-text {
  font-size: 24rpx;
}

/* 精选作品 */
.featured-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

.album-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.album-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.album-cover {
  width: 100%;
  height: 300rpx;
  display: block;
}

.album-info {
  padding: 20rpx;
}

.album-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.album-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.album-category {
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.album-count {
  color: #666;
}
