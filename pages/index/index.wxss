.index-container {
  min-height: 100vh;
  background: #000000;
  padding-bottom: 160rpx; /* 为底部TabBar和安全区域留出空间 */
  padding-top: 100rpx; /* 为自定义导航栏留出空间 */
}

/* 轮播图区域 - 延伸到标题栏 */
.banner-section {
  width: 100%;
  height: 500rpx; /* 轮播图高度 */
  position: relative;
  margin-top: -100rpx; /* 向上延伸到状态栏和导航栏区域 */
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 分类区域 */
.categories-section {
  padding: 40rpx 24rpx 20rpx;
  background: #000000;
  margin-top: 0; /* 确保紧接轮播图 */
}

.categories-scroll {
  width: 100%;
  white-space: nowrap;
}

.categories-list {
  display: flex;
  gap: 32rpx;
  padding-bottom: 10rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  min-width: 120rpx;
  flex-shrink: 0;
}

.category-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #1A1A1A;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.category-item:active .category-cover {
  transform: scale(0.95);
  opacity: 0.8;
}

.category-name {
  font-size: 24rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 1.4;
}

/* 精选作品 */
.featured-section {
  padding: 0 24rpx;
}

.section-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  text-align: center;
}

.album-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.album-item {
  background: #111111;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.album-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.3);
  border-color: rgba(255, 255, 255, 0.15);
}

.album-cover {
  width: 100%;
  height: 280rpx;
  display: block;
}

.album-info {
  padding: 20rpx;
}

.album-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.4;
}

.album-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.album-category {
  background: rgba(255, 255, 255, 0.1);
  color: #CCCCCC;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.album-count {
  color: #666666;
  font-size: 20rpx;
}

/* 空状态 */
.empty-container {
  text-align: center;
  padding: 80rpx 0;
  color: #666666;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
}

/* 查看全部按钮容器 */
.view-all-container {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  padding: 0 24rpx;
}

.view-all-button {
  background: linear-gradient(135deg, #1E3A8A 0%, #3B82F6 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx 80rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.3);
  letter-spacing: 2rpx;
  width: 100%;
  max-width: 500rpx;
}

.view-all-button::after {
  border: none;
}

.view-all-button:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.4);
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  color: #999999;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  gap: 20rpx;
  color: #FF6B6B;
}

.error-container button {
  background: rgba(255, 255, 255, 0.1);
  color: #FFFFFF;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
}

