/* Homepage - Premium Minimalist Design */
.index-container {
  min-height: 100vh;
  background: var(--primary-white);
  padding-bottom: 180rpx; /* Space for TabBar and safe area */
  padding-top: 0;
}

/* Hero Section */
.hero-section {
  width: 100%;
  height: 600rpx;
  position: relative;
  margin-bottom: 48rpx;
}

.hero-swiper {
  width: 100%;
  height: 100%;
}

.hero-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* Categories Section */
.categories-section {
  padding: 0 32rpx 48rpx;
  background: var(--primary-white);
}

.section-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.categories-scroll {
  width: 100%;
  white-space: nowrap;
}

.categories-list {
  display: flex;
  gap: 40rpx;
  padding: 0 16rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  min-width: 100rpx;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item:active {
  transform: scale(0.95);
}

.category-image-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  background: var(--gray-100);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item:active .category-image-container {
  transform: scale(0.92);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.category-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-name {
  font-size: 20rpx;
  color: var(--gray-700);
  text-align: center;
  line-height: 1.4;
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

.category-item:active .category-name {
  color: var(--gray-900);
}

/* Featured Works Section */
.featured-section {
  padding: 0 32rpx 48rpx;
}

.section-subtitle {
  font-size: 20rpx;
  color: var(--gray-500);
  font-weight: 300;
  letter-spacing: 1rpx;
  margin-top: 8rpx;
}

.album-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.album-card {
  background: var(--primary-white);
  border-radius: 20rpx;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid var(--gray-100);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.album-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
}

.album-image-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.album-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.album-card:active .album-cover {
  transform: scale(1.05);
}

.album-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  padding: 32rpx 24rpx 24rpx;
  transform: translateY(100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.album-card:active .album-overlay {
  transform: translateY(0);
}

.album-overlay-content {
  color: var(--primary-white);
}

.album-title {
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 0.5rpx;
}

.album-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 18rpx;
  opacity: 0.9;
}

.album-category {
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 400;
}

.album-count {
  font-weight: 300;
  letter-spacing: 0.25rpx;
}

/* View All Button */
.view-all-container {
  display: flex;
  justify-content: center;
  margin-top: 64rpx;
  padding: 0 32rpx;
}

.view-all-button {
  background: var(--primary-black);
  color: var(--primary-white);
  font-size: 24rpx;
  font-weight: 500;
  padding: 32rpx 80rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  letter-spacing: 1rpx;
  width: 100%;
  max-width: 600rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.view-all-button::after {
  border: none;
}

.view-all-button:active {
  background: var(--gray-800);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.16);
}

/* Enhanced Empty State */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  gap: 24rpx;
}

.empty-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.3;
  font-size: 64rpx;
  color: var(--gray-400);
}

.empty-text {
  font-size: 22rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
  color: var(--gray-500);
}



/* Error State */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  gap: 32rpx;
}

.error-text {
  font-size: 22rpx;
  color: var(--gray-600);
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

.error-container .btn-secondary {
  min-width: 120rpx;
  padding: 24rpx 48rpx;
}

