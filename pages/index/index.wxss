.index-container {
  min-height: 100vh;
  background: #000000;
  padding-bottom: 40rpx;
}

/* 轮播图区域 */
.banner-section {
  padding: 0rpx 0 0rpx;
  background: transparent;
}

.banner-swiper {
  height: 900rpx;
  width: 100%;
  overflow: visible;
}

.banner-item {
  padding: 0;
  box-sizing: border-box;
  overflow: visible;
  position: relative;
}

.banner-item.center { z-index: 30; }
.banner-item.adjacent-left { z-index: 20; }
.banner-item.adjacent-right { z-index: 20; }
.banner-item.far { z-index: 10; }

.banner-card {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  transition: transform 0.2s ease-out;
  will-change: transform;
  backface-visibility: hidden;
}

.banner-card.center { transform: scale(1.00); box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.25); }
.banner-card.adjacent-left { transform-origin: center; transform: translateX(60rpx) scale(0.86); }
.banner-card.adjacent-right { transform-origin: center; transform: translateX(-60rpx) scale(0.86); }
.banner-card.far { transform-origin: center; transform: scale(0.82); will-change: transform; backface-visibility: hidden; }

.banner-image {
  width: 100%;
  height: 100%;
  filter: contrast(1.1) brightness(1.05);
}

.banner-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  padding-top: 24rpx;
}

.indicator-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 14rpx;
  background-color: rgba(255,255,255,0.5);
  transition: all 0.3s ease;
}

.indicator-dot.active {
  width: 28rpx;
  border-radius: 28rpx;
  background-color: #FFFFFF;
  box-shadow: 0 0 8rpx rgba(255,255,255,0.6);
}

/* 品牌信息 - 黑白优雅设计 */
.brand-section {
  background-color: #000000;
  padding: 48rpx 36rpx;
  text-align: center;
  margin: 0 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  margin-top: 24rpx;
  position: relative;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.brand-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
  font-family: 'Georgia', serif;
}

.brand-slogan {
  font-size: 26rpx;
  color: #EEEEEE;
  margin-bottom: 32rpx;
  line-height: 1.8;
  font-weight: 300;
  letter-spacing: 2rpx;
}

.brand-styles {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-tag {
  display: inline-block;
  padding: 12rpx 28rpx;
  background-color: #1A1A1A;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
}

/* 管理入口 - 极简设计 */
.admin-entry {
  position: fixed;
  top: 100rpx;
  right: 30rpx;
  z-index: 1000;
  background-color: #1A1A1A;
  color: #FFFFFF;
  padding: 18rpx 32rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.admin-icon {
  font-size: 32rpx;
}

.admin-text {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}



/* 精选作品 */
.featured-section {
  margin-top: 48rpx;
  padding: 0 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.section-more {
  font-size: 26rpx;
  color: #EEEEEE;
  font-weight: 300;
}

.album-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.album-item {
  background-color: #000000;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  transition: all 0.3s ease;
}

.album-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.12);
}

.album-cover {
  width: 100%;
  height: 320rpx;
  display: block;
  filter: contrast(1.05);
}

.album-info {
  padding: 24rpx;
  color: #FFFFFF;
}

.album-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 0.5rpx;
}

.album-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #EEEEEE;
}

.album-category {
  background-color: rgba(255, 255, 255, 0.12);
  color: #FFFFFF;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-weight: 400;
}

.album-count {
  color: #DDDDDD;
  font-weight: 300;
}

/* 开发环境辅助按钮 */
.debug-openid-button {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  z-index: 999;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #FFFFFF;
  font-size: 26rpx;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 6rpx 24rpx rgba(74, 144, 226, 0.4);
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.debug-openid-button::after {
  border: none;
}

.debug-openid-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 调试面板按钮 */
.debug-panel-button {
  position: fixed;
  bottom: 200rpx;
  right: 30rpx;
  z-index: 999;
  background: linear-gradient(135deg, #FF6B35 0%, #E5533D 100%);
  color: #FFFFFF;
  font-size: 26rpx;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 6rpx 24rpx rgba(255, 107, 53, 0.4);
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.debug-panel-button::after {
  border: none;
}

.debug-panel-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}
