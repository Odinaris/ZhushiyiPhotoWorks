.admin-page {
  min-height: 100vh;
  background-color: #FFFFFF;
  color: #000000;
  padding: 24rpx;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  letter-spacing: 2rpx;
}

.add-btn {
  background-color: #000000;
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
}

.add-btn:active {
  background-color: #F5F5F5;
}

.add-btn::after {
  border: none;
}

/* 列表 */
.banner-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.banner-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 4rpx solid rgb(0, 0, 0, 0.1);
}

.banner-image {
  width: 100%;
  height: 320rpx;
}

.banner-info {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.06);
}

.banner-order {
  font-size: 28rpx;
  color: #000000;
  font-weight: 700;
}

.banner-status {
  font-size: 24rpx;
  color: #000000;
  font-weight: 400;
}

.banner-actions {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn.edit {
  background-color: #ffffff;
  color: #000000;
  border: 2rpx solid rgb(0, 0, 0, 0.2);
}

.action-btn.edit:active {
  background-color: #333;
}

.action-btn.delete {
  background-color: #ffffff;
  color: #ff0000;
  border: 2rpx solid rgb(0, 0, 0, 0.2);
}

.action-btn.delete:active {
  background-color: #F5F5F5;
}

/* 模态框 - 优雅设计 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.modal.show {
  display: flex;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background-color: #FFFFFF;
  color: #000000;
  border-radius: 24rpx;
  padding: 48rpx;
  overflow-y: auto;
  box-shadow: 0 20rpx 60rpx rgba(255, 255, 255, 0.12);
}

.modal-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 40rpx;
  text-align: center;
  letter-spacing: 2rpx;
}

.form-item {
  margin-bottom: 36rpx;
}

.form-label {
  font-size: 28rpx;
  color: #1A1A1A;
  margin-bottom: 20rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.form-input {
  width: 100%;
  padding: 28rpx 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #FAFAFA;
  transition: all 0.3s ease;
  min-height: 88rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1A1A1A;
  background-color: #FFFFFF;
}

.image-upload {
  width: 100%;
  height: 320rpx;
  border: 2rpx dashed rgba(0, 0, 0, 0.15);
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #FAFAFA;
  transition: all 0.3s ease;
}

.image-upload:active {
  border-color: #1A1A1A;
}

.upload-preview {
  width: 100%;
  height: 100%;
  filter: contrast(1.05);
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 24rpx;
  font-weight: 300;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.modal-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  background-color: #F5F5F5;
  color: #666;
}

.modal-btn.cancel:active {
  background-color: #E8E8E8;
}

.modal-btn.confirm {
  background-color: #07c160;
  color: #ffffff;
}

.modal-btn.confirm:active {
  background-color: #333;
}
