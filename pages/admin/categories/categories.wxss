@import "../banners/banners.wxss";

.list-item {
  background-color: #000000;
  color: #FFFFFF;
  border-radius: 16rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.item-info {
  margin-bottom: 24rpx;
}

.item-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.item-meta {
  font-size: 24rpx;
  color: #DDDDDD;
  font-weight: 300;
}

.divider {
  margin: 0 12rpx;
  color: #CCCCCC;
}

.active {
  color: #FFFFFF;
  font-weight: 500;
}

.inactive {
  color: #999999;
}

.item-actions {
  display: flex;
  gap: 24rpx;
}
