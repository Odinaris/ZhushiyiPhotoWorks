/* Admin Dashboard - Premium Minimalist Design */
.dashboard-container {
  min-height: 100vh;
  background: var(--primary-white);
  padding: 32rpx;
  padding-bottom: 180rpx; /* Space for TabBar and safe area */
}

/* Header */
.dashboard-header {
  text-align: center;
  color: var(--gray-900);
  margin-bottom: 64rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 300;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.header-subtitle {
  font-size: 24rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
  color: var(--gray-600);
}



/* 菜单网格 */
.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.menu-card {
  background: var(--primary-white);
  border-radius: 24rpx;
  padding: 48rpx 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid var(--gray-100);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 200rpx;
}

.menu-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
}

.menu-icon {
  font-size: 48rpx;
  color: var(--gray-700);
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.menu-title {
  font-size: 24rpx;
  color: var(--gray-900);
  font-weight: 500;
  letter-spacing: 0.5rpx;
  margin-bottom: 12rpx;
}

.menu-count {
  font-size: 18rpx;
  color: var(--gray-600);
  font-weight: 400;
  letter-spacing: 0.25rpx;
  background: var(--gray-100);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid var(--gray-200);
}

/* 底部按钮 */
.footer-actions {
  padding: 20rpx 0;
}

.footer-btn {
  width: 100%;
  background-color: #000000;
  color: #FFFFFF;
  border: 2rpx solid #000000;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
}

.footer-btn:active {
  background-color: #FFFFFF;
  color: #000000;
}

.footer-btn::after {
  border: none;
}
