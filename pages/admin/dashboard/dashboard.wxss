.dashboard-container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #667eea 0%, #764ba2 50%, #f5f5f5 50%);
  padding: 40rpx 20rpx;
  padding-bottom: 40rpx;
}

/* 头部 */
.dashboard-header {
  text-align: center;
  color: #fff;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 菜单列表 */
.menu-section {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 48rpx;
  color: #ccc;
}

/* 底部按钮 */
.footer-actions {
  padding: 20rpx 0;
}

.footer-btn {
  width: 100%;
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

.footer-btn::after {
  border: none;
}
