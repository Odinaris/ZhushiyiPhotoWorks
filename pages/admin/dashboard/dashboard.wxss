.dashboard-container {
  min-height: 100vh;
  background: #000000;
  padding: 48rpx 24rpx;
  padding-bottom: 48rpx;
}

/* 头部 */
.dashboard-header {
  text-align: center;
  color: #FFFFFF;
  margin-bottom: 48rpx;
}

.header-title {
  font-size: 52rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  letter-spacing: 3rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.85;
  font-weight: 300;
  letter-spacing: 1rpx;
}

/* 统计卡片 */
.stats-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.stat-card {
  background-color: #000000;
  border-radius: 16rpx;
  padding: 44rpx 24rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(255, 255, 255, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 32rpx rgba(255, 255, 255, 0.12);
}

.stat-value {
  font-size: 52rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #DDDDDD;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 菜单列表 */
.menu-section {
  background-color: #000000;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  margin-bottom: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 36rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: background-color 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: rgba(255, 255, 255, 0.05);
}

.menu-icon {
  font-size: 52rpx;
  margin-right: 28rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  color: #FFFFFF;
  font-weight: 500;
  margin-bottom: 10rpx;
  letter-spacing: 0.5rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #DDDDDD;
  font-weight: 300;
}

.menu-arrow {
  font-size: 48rpx;
  color: #DDD;
}

/* 底部按钮 */
.footer-actions {
  padding: 20rpx 0;
}

.footer-btn {
  width: 100%;
  background-color: #000000;
  color: #FFFFFF;
  border: 2rpx solid #FFFFFF;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
}

.footer-btn:active {
  background-color: #FFFFFF;
  color: #000000;
}

.footer-btn::after {
  border: none;
}
