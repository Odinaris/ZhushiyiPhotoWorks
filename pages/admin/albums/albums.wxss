.admin-page {
  min-height: 100vh;
  background-color: #000000;
  color: #FFFFFF;
  padding: 24rpx;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.06);
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.add-btn {
  background-color: #1A1A1A;
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.add-btn::after {
  border: none;
}

.album-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.album-card {
  background-color: #000000;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.album-cover {
  width: 100%;
  height: 320rpx;
  filter: contrast(1.05);
}

.album-info {
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.06);
}

.album-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.album-meta {
  font-size: 24rpx;
  color: #DDDDDD;
  font-weight: 300;
}

.divider {
  margin: 0 12rpx;
  color: #CCCCCC;
}

.active {
  color: #FFFFFF;
  font-weight: 500;
}

.inactive {
  color: #999999;
}

.featured {
  color: #FFFFFF;
  font-weight: 600;
}

.album-actions {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
}

.action-btn::after {
  border: none;
}

.action-btn.edit {
  background-color: #1A1A1A;
  color: #FFFFFF;
}

.action-btn.delete {
  background-color: #FFFFFF;
  color: #1A1A1A;
  border: 2rpx solid #1A1A1A;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 300;
}
