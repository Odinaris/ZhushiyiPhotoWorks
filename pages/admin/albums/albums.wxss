/* Admin Albums Page - Premium Minimalist Design */
.admin-page {
  min-height: 100vh;
  background: var(--primary-white);
  color: var(--gray-900);
  padding: 32rpx;
}

/* Hide all scrollbars */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  background: transparent;
}

/* Hide scrollbars in scroll-view */
scroll-view ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

/* Category Tabs */
.category-tabs {
  margin-bottom: 32rpx;
}

.tabs-scroll {
  width: 100%;
  white-space: nowrap;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.tabs-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.tabs-list {
  display: flex;
  gap: 24rpx;
  padding: 0 16rpx;
}

.tab-item {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
  color: var(--gray-600);
  background: var(--gray-100);
  border: 1rpx solid var(--gray-200);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

.tab-item.active {
  background: var(--primary-black);
  color: var(--primary-white);
  border-color: var(--primary-black);
}

.tab-item:active {
  transform: scale(0.95);
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid var(--gray-100);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.header-title {
  font-size: 36rpx;
  font-weight: 300;
  color: var(--gray-900);
  letter-spacing: 1rpx;
}

.add-btn {
  background: var(--primary-black);
  color: var(--primary-white);
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 22rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.add-btn:active {
  background: var(--gray-800);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.16);
}

.add-btn::after {
  border: none;
}

.album-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.album-card {
  background: var(--primary-white);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid var(--gray-100);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

.album-cover-container {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}

.album-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: contrast(1.05);
}

.album-info {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  flex: 1;
}

.album-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.album-meta {
  font-size: 18rpx;
  color: var(--gray-600);
  font-weight: 300;
  letter-spacing: 0.25rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 6rpx;
}

.meta-divider {
  margin: 0 8rpx;
  color: var(--gray-300);
}

.meta-category {
  color: var(--gray-700);
}

.meta-count {
  color: var(--gray-600);
}

.meta-status.active {
  color: var(--gray-900);
  font-weight: 500;
}

.meta-status.inactive {
  color: var(--gray-400);
}

.meta-featured.featured {
  color: var(--primary-black);
  font-weight: 500;
}

.album-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: var(--gray-50);
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 16rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-icon.edit {
  background: var(--gray-200);
  color: var(--gray-700);
}

.action-icon.edit:active {
  background: var(--gray-300);
  transform: scale(0.9);
}

.action-icon.delete {
  background: rgba(255, 0, 0, 0.1);
  color: rgba(255, 0, 0, 0.8);
}

.action-icon.delete:active {
  background: rgba(255, 0, 0, 0.2);
  transform: scale(0.9);
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
  gap: 24rpx;
}

.empty-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.3;
  font-size: 64rpx;
  color: var(--gray-400);
}

.empty-text {
  font-size: 22rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
  color: var(--gray-500);
}
