@import "../album-edit/album-edit.wxss";

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn-small {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 36rpx;
  border: none;
  padding: 0;
}

.add-btn-small::after {
  border: none;
}

.qa-card,
.contact-card {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.delete-btn {
  width: 100%;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 26rpx;
  border: none;
}

.delete-btn::after {
  border: none;
}
