/* Admin Contact Page - Premium Minimalist Design */
.edit-page {
  min-height: 100vh;
  background: var(--primary-white);
  color: var(--gray-900);
  padding: 32rpx;
}

/* Section Styles */
.section {
  margin-bottom: 64rpx;
  background: var(--primary-white);
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid var(--gray-100);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.section:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--gray-900);
  margin-bottom: 40rpx;
  letter-spacing: 0.5rpx;
  border-bottom: 1rpx solid var(--gray-100);
  padding-bottom: 16rpx;
}

.form-item {
  margin-bottom: 60rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 22rpx;
  color: var(--gray-900);
  margin-bottom: 16rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 1rpx solid var(--gray-200);
  border-radius: 16rpx;
  font-size: 22rpx;
  background: var(--gray-50);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 80rpx;
  box-sizing: border-box;
  color: var(--gray-900);
}

.form-input:focus {
  border-color: var(--primary-black);
  background: var(--primary-white);
}

.form-textarea {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 1rpx solid var(--gray-200);
  border-radius: 16rpx;
  font-size: 22rpx;
  background: var(--gray-50);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 160rpx;
  box-sizing: border-box;
  color: var(--gray-900);
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: var(--primary-black);
  background: var(--primary-white);
}

.char-count {
  text-align: right;
  font-size: 18rpx;
  color: var(--gray-500);
  margin-top: 8rpx;
  letter-spacing: 0.25rpx;
}

/* Logo Upload */
.logo-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.logo-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  object-fit: cover;
  border: 1rpx solid var(--gray-200);
  filter: brightness(0.98) contrast(1.05);
  margin-bottom: 80rpx;
}

.logo-placeholder {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--gray-300);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--gray-50);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.logo-placeholder:active {
  border-color: var(--primary-black);
  background: var(--gray-100);
  transform: scale(0.98);
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  opacity: 0.5;
  color: var(--gray-500);
}

.upload-text {
  font-size: 20rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
  color: var(--gray-600);
}

.logo-actions {
  display: flex;
  gap: 12rpx;
  position: relative;
}

.btn-small {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-size: 18rpx;
  border: none;
  font-weight: 400;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 0.25rpx;
  min-width: 80rpx;
}

.btn-small::after {
  border: none;
}

.change-btn {
  background: var(--gray-100);
  color: var(--gray-700);
  border: 1rpx solid var(--gray-200);
}

.change-btn:active {
  background: var(--gray-200);
  transform: scale(0.98);
}

.delete-btn {
  background: var(--primary-white);
  color: var(--gray-600);
  border: 1rpx solid var(--gray-200);
}

.delete-btn:active {
  background: rgba(255, 0, 0, 0.05);
  border-color: rgba(255, 0, 0, 0.2);
  transform: scale(0.98);
}

/* Styles Input */
.styles-input-container {
  width: 100%;
}

.styles-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.style-input-item {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.style-input {
  flex: 1;
  padding: 20rpx 16rpx;
  border: 1rpx solid var(--gray-200);
  border-radius: 12rpx;
  font-size: 20rpx;
  background: var(--gray-50);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 60rpx;
  box-sizing: border-box;
  color: var(--gray-900);
}

.style-input:focus {
  border-color: var(--primary-black);
  background: var(--primary-white);
}

.style-remove {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--gray-200);
  color: var(--gray-600);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.style-remove:active {
  background: var(--gray-300);
  transform: scale(0.9);
}

.add-style-btn {
  width: 100%;
  padding: 20rpx;
  border: 1rpx dashed var(--gray-300);
  border-radius: 12rpx;
  background: var(--gray-50);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-style-btn:active {
  border-color: var(--primary-black);
  background: var(--gray-100);
  transform: scale(0.98);
}

.add-icon {
  font-size: 28rpx;
  color: var(--gray-600);
}

.add-style-btn text {
  font-size: 20rpx;
  font-weight: 400;
  color: var(--gray-700);
  letter-spacing: 0.5rpx;
}

/* Form Actions */
.form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.action-btn {
  flex: 1;
  padding: 32rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn::after {
  border: none;
}

.action-btn.save {
  background: var(--primary-black);
  color: var(--primary-white);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.action-btn.save:active {
  background: var(--gray-800);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.16);
}