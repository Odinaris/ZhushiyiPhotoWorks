.edit-page {
  padding: 24rpx;
  background-color: #FFFFFF;
  min-height: 100vh;
}

.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 32rpx;
  letter-spacing: 2rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #000000;
  font-weight: 500;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #000000;
  background-color: #FFFFFF;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #000000;
  background-color: rgba(0, 0, 0, 0.02);
}

.form-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #000000;
  background-color: #FFFFFF;
  box-sizing: border-box;
  transition: all 0.3s ease;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #000000;
  background-color: rgba(0, 0, 0, 0.02);
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* Logo上传 */
.logo-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.logo-placeholder {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed rgba(0, 0, 0, 0.2);
  border-radius: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.02);
  transition: all 0.3s ease;
}

.logo-placeholder:active {
  background-color: rgba(0, 0, 0, 0.05);
  border-color: rgba(0, 0, 0, 0.3);
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #666666;
}

.logo-actions {
  display: flex;
  gap: 16rpx;
}

.btn-small {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  color: #FFFFFF;
  margin: 0;
  min-width: 120rpx;
}

.change-btn {
  background-color: #007AFF;
}

.delete-btn {
  background-color: #FF3B30;
}

.btn-small:active {
  opacity: 0.8;
}

/* 按钮样式 */
.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 36rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.action-btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  color: #FFFFFF;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

.action-btn.save {
  background-color: #000000;
}

.action-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}