@import "../album-edit/album-edit.wxss";

.section {
  background-color: #000000;
  border-radius: 16rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 1rpx;
}

.add-btn-small {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background-color: #1A1A1A;
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 36rpx;
  border: none;
  padding: 0;
  transition: all 0.3s ease;
}

.add-btn-small:active {
  background-color: #333;
}

.add-btn-small::after {
  border: none;
}

.qa-card,
.contact-card {
  background-color: #000000;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.delete-btn {
  width: 100%;
  background-color: #000000;
  color: #FFFFFF;
  border: 2rpx solid #FFFFFF;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background-color: #FFFFFF;
  color: #000000;
}

.delete-btn::after {
  border: none;
}
