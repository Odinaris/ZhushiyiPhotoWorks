/* Admin Album Edit Page - Premium Minimalist Design */
.edit-page {
  min-height: 100vh;
  background: var(--primary-white);
  color: var(--gray-900);
  padding: 32rpx;
  padding-bottom: 180rpx;
}

.form-section {
  background: var(--primary-white);
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid var(--gray-100);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.form-section:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 48rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 22rpx;
  color: var(--gray-900);
  font-weight: 500;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.form-label-inline {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: var(--gray-900);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 1rpx solid var(--gray-200);
  border-radius: 16rpx;
  font-size: 22rpx;
  box-sizing: border-box;
  background: var(--gray-50);
  color: var(--gray-900);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 88rpx;
}

.form-input:focus {
  border-color: var(--primary-black);
  background: var(--primary-white);
}

.form-textarea {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 1rpx solid var(--gray-200);
  border-radius: 16rpx;
  font-size: 22rpx;
  background: var(--gray-50);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 140rpx;
  box-sizing: border-box;
  color: var(--gray-900);
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: var(--primary-black);
  background: var(--primary-white);
}

.picker {
  padding: 24rpx 20rpx;
  border: 1rpx solid var(--gray-200);
  border-radius: 16rpx;
  font-size: 22rpx;
  color: var(--gray-900);
  background: var(--gray-50);
  min-height: 80rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.picker:focus {
  border-color: var(--primary-black);
  background: var(--primary-white);
}

.image-upload {
  width: 100%;
  height: 280rpx;
  border: 2rpx dashed var(--gray-300);
  border-radius: 16rpx;
  overflow: hidden;
  background: var(--gray-50);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.image-upload:active {
  border-color: var(--primary-black);
  background: var(--gray-100);
  transform: scale(0.98);
}

.upload-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.98) contrast(1.05);
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--gray-500);
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  opacity: 0.5;
}

.upload-text {
  font-size: 20rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.grid-item {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid var(--gray-100);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.grid-item:active {
  transform: scale(0.95);
}

.grid-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.98) contrast(1.05);
}

.grid-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.8);
  color: var(--primary-white);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  line-height: 1;
  border-radius: 50%;
  backdrop-filter: blur(8rpx);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.grid-delete:active {
  background: rgba(0, 0, 0, 0.9);
  transform: scale(0.9);
}

.add-item {
  border: 2rpx dashed var(--gray-300);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--gray-700);
  background: var(--gray-50);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-item:active {
  border-color: var(--primary-black);
  background: var(--gray-100);
  transform: scale(0.98);
}

.add-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
}

.add-text {
  font-size: 18rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 32rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
  border-top: 1rpx solid var(--gray-100);
}

.action-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn::after {
  border: none;
}

.action-btn.cancel {
  background: var(--gray-100);
  color: var(--gray-700);
  border: 1rpx solid var(--gray-200);
}

.action-btn.cancel:active {
  background: var(--gray-200);
  transform: translateY(2rpx);
}

.action-btn.save {
  background: var(--primary-black);
  color: var(--primary-white);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.action-btn.save:active {
  background: var(--gray-800);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.16);
}