.edit-page {
  min-height: 100vh;
  background-color: #000000;
  color: #FFFFFF;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

.form-section {
  background-color: #000000;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.form-item {
  margin-bottom: 48rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
}

.form-label-inline {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 28rpx 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #000000;
  color: #FFFFFF;
  transition: all 0.3s ease;
  min-height: 88rpx;
}

.form-input:focus {
  border-color: #FFFFFF;
  background-color: #000000;
}

.form-textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 28rpx 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #000000;
  color: #FFFFFF;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #FFFFFF;
  background-color: #000000;
}

.picker {
  padding: 28rpx 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  background-color: #000000;
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

.image-upload {
  width: 100%;
  height: 320rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #000000;
  transition: all 0.3s ease;
}

.upload-preview {
  width: 100%;
  height: 100%;
  filter: contrast(1.05);
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #DDDDDD;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 24rpx;
  font-weight: 300;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.grid-item {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.grid-image {
  width: 100%;
  height: 100%;
  filter: contrast(1.05);
}

.grid-delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 54rpx;
  height: 54rpx;
  background-color: rgba(0, 0, 0, 0.75);
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  line-height: 1;
  backdrop-filter: blur(10rpx);
}

.add-item {
  border: 2rpx dashed rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #DDDDDD;
  background-color: #000000;
  transition: all 0.3s ease;
}

.add-item:active {
  border-color: #1A1A1A;
}

.add-icon {
  font-size: 52rpx;
  margin-bottom: 10rpx;
  opacity: 0.6;
}

.add-text {
  font-size: 22rpx;
  font-weight: 300;
}

.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000000;
  padding: 24rpx 36rpx;
  box-shadow: 0 -6rpx 24rpx rgba(255, 255, 255, 0.06);
  display: flex;
  gap: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
}

.action-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.action-btn::after {
  border: none;
}

.action-btn.cancel {
  background-color: #F5F5F5;
  color: #666;
}

.action-btn.save {
  background-color: #1A1A1A;
  color: #FFFFFF;
}
