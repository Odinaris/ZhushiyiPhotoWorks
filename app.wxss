/**app.wxss - Premium Minimalist Design System**/

/* Color Palette - Premium Monochromatic */
page {
  --primary-black: #000000;
  --primary-white: #FFFFFF;
  --gray-50: #FAFAFA;
  --gray-100: #F5F5F5;
  --gray-200: #E5E5E5;
  --gray-300: #D4D4D4;
  --gray-400: #A3A3A3;
  --gray-500: #737373;
  --gray-600: #525252;
  --gray-700: #404040;
  --gray-800: #262626;
  --gray-900: #171717;
  
  background-color: var(--primary-white);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: var(--gray-900);
  line-height: 1.6;
  font-weight: 400;
}

/* Container System */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

.page-container {
  padding: 32rpx;
  min-height: 100vh;
  max-width: 750rpx;
  margin: 0 auto;
}

.content-container {
  padding: 0 24rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

/* Typography System */
.text-display-xl {
  font-size: 48rpx;
  font-weight: 300;
  line-height: 1.2;
  letter-spacing: -1rpx;
  color: var(--gray-900);
}

.text-display-lg {
  font-size: 40rpx;
  font-weight: 300;
  line-height: 1.3;
  letter-spacing: -0.5rpx;
  color: var(--gray-900);
}

.text-display-md {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.4;
  color: var(--gray-900);
}

.text-title-lg {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.4;
  color: var(--gray-900);
  letter-spacing: 0.5rpx;
}

.text-title-md {
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.4;
  color: var(--gray-900);
}

.text-body-lg {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 1.5;
  color: var(--gray-700);
}

.text-body-md {
  font-size: 22rpx;
  font-weight: 400;
  line-height: 1.5;
  color: var(--gray-600);
}

.text-body-sm {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 1.5;
  color: var(--gray-500);
}

.text-caption {
  font-size: 18rpx;
  font-weight: 400;
  line-height: 1.4;
  color: var(--gray-400);
  letter-spacing: 0.25rpx;
}

/* Section Headers */
.section-title {
  font-size: 36rpx;
  font-weight: 300;
  color: var(--gray-900);
  margin: 64rpx 0 32rpx;
  padding: 0 24rpx;
  letter-spacing: 1rpx;
  text-align: center;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--gray-500);
  margin: 32rpx 0 24rpx;
  padding: 0 24rpx;
  font-weight: 300;
  text-align: center;
}

/* Button System */
.btn-primary {
  background-color: var(--primary-black);
  color: var(--primary-white);
  border-radius: 12rpx;
  padding: 28rpx 56rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  letter-spacing: 1rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.btn-primary:active {
  background-color: var(--gray-800);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.btn-secondary {
  background-color: var(--primary-white);
  color: var(--gray-900);
  border: 1rpx solid var(--gray-200);
  border-radius: 12rpx;
  padding: 28rpx 56rpx;
  font-size: 24rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  letter-spacing: 1rpx;
}

.btn-secondary:active {
  background-color: var(--gray-50);
  border-color: var(--gray-300);
  transform: translateY(2rpx);
}

.btn-ghost {
  background-color: transparent;
  color: var(--gray-700);
  border: 1rpx solid var(--gray-300);
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 22rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 400;
}

.btn-ghost:active {
  background-color: var(--gray-100);
  border-color: var(--gray-400);
}

/* Card System */
.card {
  background-color: var(--primary-white);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-100);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card:active {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-4rpx);
}

.card-compact {
  background-color: var(--primary-white);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 1rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid var(--gray-100);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-compact:active {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

/* Image System */
.image-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.98) contrast(1.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.image-cover:active {
  filter: brightness(0.95) contrast(1.08);
}

/* State Components - Premium Loading Design */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  gap: 32rpx;
  background: var(--primary-white);
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid var(--gray-100);
  border-top: 4rpx solid var(--gray-600);
  border-radius: 50%;
  animation: loadingSpin 1s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

.loading-text {
  font-size: 22rpx;
  color: var(--gray-500);
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

@keyframes loadingSpin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Modal Loading Overlay - For util.showLoading */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  gap: 32rpx;
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.loading-overlay.show {
  opacity: 1;
}

.loading-overlay .loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border-width: 5rpx;
}

.loading-overlay .loading-text {
  font-size: 24rpx;
  color: var(--gray-600);
  font-weight: 400;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
  color: var(--gray-400);
  gap: 24rpx;
}

.empty-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.4;
  font-size: 80rpx;
}

.empty-text {
  font-size: 24rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
  color: var(--gray-500);
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: var(--gray-600);
  gap: 32rpx;
}

