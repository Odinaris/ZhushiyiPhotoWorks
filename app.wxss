/**app.wxss - 优雅黑白主题**/
page {
  background-color: #FAFAFA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: #1A1A1A;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用样式 */
.page-container {
  padding: 20rpx;
  min-height: 100vh;
}

.section-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin: 40rpx 0 24rpx;
  padding: 0 20rpx;
  letter-spacing: 1rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
  padding: 0 20rpx;
  font-weight: 300;
}

/* 按钮样式 - 黑白主题 */
.btn-primary {
  background-color: #1A1A1A;
  color: #FFFFFF;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.btn-primary:active {
  background-color: #333;
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #1A1A1A;
  border: 2rpx solid #1A1A1A;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.btn-secondary:active {
  background-color: #F5F5F5;
}

/* 卡片样式 - 优雅设计 */
.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.card:active {
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 图片样式 */
.image-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: contrast(1.05);
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #666;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 1rpx;
} 
