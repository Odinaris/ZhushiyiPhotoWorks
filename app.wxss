/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用样式 */
.page-container {
  padding: 20rpx;
  min-height: 100vh;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 20rpx;
  padding: 0 20rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
  padding: 0 20rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-secondary {
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 图片样式 */
.image-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
} 
